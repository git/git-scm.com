<% @section    = 'documentation' %>
<% @subsection = 'reference' %>

<% cache @doc do %>
  <% content_for :sidebar do %>
    <%= render 'shared/related' %>
  <% end %>

  <div id='reference-version'>
    <%= render 'doc/topics' %>
    <%= render 'doc/versions' %>
  </div>

  <div id='main'>
    <%=raw @doc.html %>
  </div>
<% end %>
